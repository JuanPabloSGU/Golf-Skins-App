<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.golfskinsapp">

    <!--
    Main Activity - Main Page
        play_round - Play a Skins Game button
    -->

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.GolfSkinsApp">
        <activity
            android:name=".start_round"
            android:exported="true"
            android:parentActivityName=".play_round"/>
        <activity
            android:name=".add_Player"
            android:exported="true"
            android:parentActivityName=".play_round"/>
        <activity
            android:name=".select_course"
            android:exported="true"
            android:parentActivityName=".play_round"/>
        <activity
            android:name=".play_round"
            android:exported="true"
            android:parentActivityName=".MainActivity"/>
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>